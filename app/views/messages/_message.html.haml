%li.chat_body{"data-message-id": "#{message.id}"}
  %span.user_name
    = message.user.name
  %span.update_at
    = message.created_at.to_s
  %div.message
    - if message.content.present?
      %div.message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
