%header
  %nav_bar
    %div.nav_bar__user
      %span.nav_bar__user__name
        = current_user.name
      %div.nav_bar__user__icon
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
    - unless controller_name == "groups"
      %div.nav_bar__group
        =link_to "Edit", root_path, class: "edit_button"
        %div.group__name
          = @group.name if @group.present?
        %div.group__members
          members:
          - @group.users.each do |user|
            = user.name
